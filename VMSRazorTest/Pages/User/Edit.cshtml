            </div>
            <div class="form-group">
                <label asp-for="Users.password" class="control-label"></label>
                <input asp-for="Users.password" class="form-control" />
                <span asp-validation-for="Users.password" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Users.role_id" class="control-label"></label>
                <input asp-for="Users.role_id" class="form-control" />
                <span asp-validation-for="Users.role_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

