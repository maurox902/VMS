@page
@model VMSRazorTest.Pages.User.IndexModel

@{
    ViewData["Title"] = "Users";
}

<p>
    <a asp-page="Create">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].role_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role_id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.user_id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.user_id">View</a> |
                <a asp-page="./Delete" asp-route-id="@item.user_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
