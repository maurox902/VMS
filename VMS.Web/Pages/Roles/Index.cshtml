@page
@model IndexModel

@{
    ViewData["Title"] = "Roles";
}

<p>
    <a asp-page="Create">Create New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Role) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RolId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RolId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RolId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
